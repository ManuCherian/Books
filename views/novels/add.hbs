<h1>Add A Novel </h1>
<p>{{message}}</p>

<form method="post">
    <fieldset class="form-group">
        <label class="control-label col-md-2">Book: *</label>
        <input book="book" id="book" required />
    </fieldset>
    
    <fieldset class="form-group">
        <label class="control-label col-md-2">Priority: *</label>
        <select name="priority" id="priority">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </fieldset>
    <button class="col-md-offset-2 btn btn-primary">Save</button>
</form>
